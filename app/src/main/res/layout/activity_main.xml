<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="viewModel"
            type="com.example.currency_converter_hw.viewModel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="30dp"
        tools:context=".ui.MainActivity">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Result"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="DZD"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/spinnerToCurrency"
            app:layout_constraintTop_toBottomOf="@+id/spinnerToCurrency" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="To"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/spinnerFromCurrency" />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_edit_text"
            android:hint="Converted Amount"
            android:paddingHorizontal="15dp"
            android:paddingVertical="13dp"
            android:text="@{viewModel.convertCurrency.toString()}"
            android:textColor="#6C6C6C"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editTextNumber"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextNumber"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.081" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:onClick="@{() -> viewModel.getConverter()}"
            android:text="Convert"
            app:backgroundTint="#437A5D"
            app:iconTint="@color/white"
            app:icon="@drawable/ic_compare_arrows_24"
            android:gravity="center"
            app:iconGravity="textStart"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextNumber"
            app:layout_constraintStart_toStartOf="@+id/editTextNumber"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

        <Button
            android:id="@+id/switchSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:letterSpacing="0.06"
            android:padding="0dp"
            android:text="Switch"
            android:textAllCaps="false"
            android:textColor="#4986CF"
            android:textSize="15dp"
            app:icon="@drawable/ic_swap_vert_24"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"

            app:iconTint="#4986CF"
            app:layout_constraintBottom_toTopOf="@+id/spinnerFromCurrency"
            app:layout_constraintEnd_toEndOf="@+id/spinnerFromCurrency" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edit_text"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:paddingHorizontal="15dp"
            android:text="@={viewModel.currentCurrency}"
            android:textColor="#6C6C6C"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/spinnerToCurrency"
            app:layout_constraintStart_toStartOf="@+id/spinnerToCurrency"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Spinner
            android:id="@+id/spinnerFromCurrency"
            style="@style/SpinnerTheme"
            theCurrency="@{viewModel.fromCurrency}"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="13dp"
            android:layout_weight="1"
            android:entries="@array/listCurrency"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Spinner
            android:id="@+id/spinnerToCurrency"
            style="@style/SpinnerTheme"
            theCurrency="@{viewModel.toCurrency}"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginVertical="13dp"
            android:layout_weight="1"
            android:entries="@array/listCurrency"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="@+id/spinnerFromCurrency"
            app:layout_constraintStart_toStartOf="@+id/spinnerFromCurrency"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:padding="0dp"
            android:text="Currency"
            android:textColor="#437A5D"
            android:textSize="26dp"
            android:letterSpacing="0.07"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text="Converter"
            android:letterSpacing="0.16"
            android:textColor="#437A5D"
            android:textSize="35dp"
            android:padding="0dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:text="From"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>