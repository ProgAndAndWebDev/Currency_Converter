<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Currency_Converter_HW" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#448965</item>
        <item name="colorSecondaryVariant">#448965</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerTheme</item>
    </style>

    <style name="SpinnerTheme" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textColor">#b1b0b0</item>
    </style>
</resources>